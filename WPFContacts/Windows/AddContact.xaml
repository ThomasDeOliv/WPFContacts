<Window x:Class="WPFContacts.Windows.AddContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFContacts.Windows"
        mc:Ignorable="d"
        Title="AddContact" 
        Height="600" 
        Width="450">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Nom"/>
            <TextBox x:Name="nameField" />
            <Label Content="Prénom"/>
            <TextBox x:Name="firstnameField" />
            <Label Content="Numéro de téléphone"/>
            <TextBox x:Name="phoneField" />
            <Label Content="Adresse mail"/>
            <TextBox x:Name="mailField" />
            <Button Content="Ajouter" 
                    x:Name="createContactButton"/>
        </StackPanel>
    </Grid>
</Window>
